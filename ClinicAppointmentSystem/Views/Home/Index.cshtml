@{
    ViewData["Title"] = "Home Page";
}

<div class="container d-flex flex-column justify-content-center align-items-center text-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-5" style="max-width: 600px; border-radius: 12px;">
        <h1 class="display-4 fw-bold">Welcome to Our Clinic</h1>
        <p class="lead text-muted">Manage appointments, doctors, and patients with ease.</p>

        <div class="d-flex flex-column align-items-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg rounded-3 shadow-sm w-100 mb-2">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg rounded-3 shadow-sm w-100">Register</a>
        </div>

        <p class="mt-4">
            <small class="text-muted">
                Learn more about <a href="https://docs.microsoft.com/aspnet/core" target="_blank">ASP.NET Core</a>.
            </small>
        </p>
    </div>
</div>
