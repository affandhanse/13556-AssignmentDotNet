@model IEnumerable<ClinicAppointmentSystem.Models.Doctor>

@{
    ViewData["Title"] = "Get All Doctors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Doctor List</h2>
        <a asp-action="AddDoctor" class="btn btn-success">Add New Doctor</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Specialty)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                    <td class="text-center">
                        <a asp-action="EditDoctor" asp-route-id="@item.DoctorId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteDoctor" asp-route-id="@item.DoctorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>